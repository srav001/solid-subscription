{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"target": "ES2020",
    "module": "ESNext",
		"jsx": "preserve",
    "jsxImportSource": "solid-js",
		"strict": true,
    "noEmit": true,
		"noImplicitAny": true,
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"moduleResolution": "node",
		"lib": ["ESNext", "ESNext.AsyncIterable", "DOM"]
	},
	"types": ["solid-js", "vite/client", "@types/node"]
}
